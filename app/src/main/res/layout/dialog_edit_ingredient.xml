<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/etEditIngredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/ingredient"
        app:layout_constraintRight_toLeftOf="@+id/spinnerEditUnits"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/btnDeleteIngredient"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/spinnerEditUnits" />

    <EditText
        android:id="@+id/etEditQuantity"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginEnd="18dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="18dp"
        android:layout_marginStart="1dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="@string/quantity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/btnUpdateIngredient"
        app:layout_constraintRight_toLeftOf="@+id/spinnerEditUnits"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Spinner
        android:id="@+id/spinnerEditUnits"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:entries="@array/units_array"
        android:visibility="visible"
        android:layout_marginEnd="94dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="94dp" />

    <Button
        android:id="@+id/btnUpdateIngredient"
        android:layout_width="217dp"
        android:layout_height="48dp"
        android:text="@string/update_ingredient"
        app:layout_constraintRight_toLeftOf="@+id/spinnerEditUnits"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/spinnerEditUnits"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/spinnerEditUnits" />

    <Button
        android:id="@+id/btnDeleteIngredient"
        android:layout_width="218dp"
        android:layout_height="48dp"
        android:text="@string/delete_ingredient"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="111dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>