<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/etEditQuantity"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="@string/quantity"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/btnUpdateIngredient"
        android:layout_marginTop="61dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="63dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvEditIngredient"
        android:layout_marginLeft="0dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintRight_toLeftOf="@+id/spinnerEditUnits"
        android:layout_marginRight="0dp"
        app:layout_constraintHorizontal_bias="0.503" />

    <Spinner
        android:id="@+id/spinnerEditUnits"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginEnd="91dp"
        android:entries="@array/units_array"
        android:visibility="visible"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/etEditQuantity"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/etEditQuantity"
        android:layout_marginRight="0dp"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnUpdateIngredient"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="@string/update_ingredient"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/tvEditIngredient"
        android:layout_marginTop="74dp"
        app:layout_constraintTop_toBottomOf="@+id/tvEditIngredient"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/tvEditIngredient" />

    <Button
        android:id="@+id/btnDeleteIngredient"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/delete_ingredient"
        tools:layout_editor_absoluteY="14dp"
        tools:layout_editor_absoluteX="111dp"
        android:layout_marginTop="14dp" />

    <TextView
        android:id="@+id/tvEditIngredient"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/ingredient"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="24sp"
        app:layout_constraintRight_toLeftOf="@+id/spinnerEditUnits"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/btnDeleteIngredient"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/spinnerEditUnits" />
</android.support.constraint.ConstraintLayout>