<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvAboutRecipeName"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Recipe Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="30sp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="7dp" />

    <TextView
        android:id="@+id/tvRecipeTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:text="Time"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/tvAboutRecipeName"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvAboutRecipeName" />

    <TextView
        android:id="@+id/tvRecipeRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating: 0"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvRecipeTime"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="@+id/tvAboutRecipeName" />

</android.support.constraint.ConstraintLayout>